mixin news-slider__slide(title)
  a(href="article.html").news-slider__slide
    .news-slider__img(style='background-image: url("assets/img/news-slider.jpg")')
    h3.news-slider__title #{title}
    .news-slider__text
      p Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis <span> >>> </span>

//begin news
.news#news
  .news__decor--right
    img(src="assets/img/decor.svg" alt="decor")

  .news__inn
    h2.news__title.title Data Science News
    //begin news-slider
    .news__slider.news-slider#news-slider
      +news-slider__slide('News 1', ' ')
      +news-slider__slide('News 2')
      +news-slider__slide('News 3')
      +news-slider__slide('News 4')
    //end news-slider
//end news